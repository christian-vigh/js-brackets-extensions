   {
	"*" 		:
	   {
		"language" 		:  "all",
		"regexp" 		:  "[a-zA-Z][a-zA-Z0-9_]",
		"blockComments"		: 
		   [
			{ "begin" :  "/*", "end" :  "*/" }
		    ],
		"lineComments" 		:  [ "//" ]
	    },
	 "all" 		:
	    {
		"use"			:  "*"
	     },
	 "javascript"	:
	    {
		"use" 			:  "*",
		"language"		;  "javascript"
	     },
	 "php"		:
	    {
		"use" 			:  "*",
		"language" 		:  "php",
		"regexp" 		:  "[$]?[a-zA-Z][a-zA-Z0-9_]",
		"lineComment" 		:  [ "//", "#" ]
	     },
	 "css"		:
	    {
		"language" 		:  "css",
		"blockComments"		:
		    [
			 { "begin" : "<!--", "end" : "-->" }
		     ],
		"lineComments" 		:  []
	     }
    } 